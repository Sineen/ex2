FLAGS = -g -Wall -Wvla -Wextra -DNDEBUG -std=c99

.PHONY: clean

all: MyStringExample
./MyStringExample

LineSeparator: LineSeparator.o
gcc LineSeparator.o -o LineSeparator

LineSeparator.o: LineSeparator.c LineSeparator.h
gcc $(FLAGS) -c LineSeparator.c -o LineSeparator.o

MyStringExample: MyStringExample.c MyString.c MyString.h
gcc $(FLAGS) -o MyStringExample MyString.c MyStringExample.c

MyString.o: MyString.c MyString.h
gcc $(FLAGS) -c MyString.c -o MyString.o

clean:
rm -f *.o LineSeparator MyStringExample MyString